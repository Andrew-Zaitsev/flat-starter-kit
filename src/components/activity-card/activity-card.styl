.activity-card
  display flex
  align-items stretch
  border-radius 0.3rem
  height: 17.65rem;

  &__image-frame
    flex 3 1
    overflow hidden
    border-bottom-left-radius 0.3rem
    border-top-left-radius 0.3rem
    background url(./img/default.jpg) no-repeat
    background-size cover
    display flex
    align-items stretch

  &__image
    max-width 100%
    object-fit cover

  &__preview
    flex 1 0 12.5rem
    display flex
    overflow hidden
    border-top-right-radius 0.3rem
    border-bottom-right-radius 0.3rem