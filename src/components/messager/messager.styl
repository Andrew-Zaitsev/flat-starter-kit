.messager
  display flex
  flex-direction column
  align-items stretch

  &__user-name
    overflow hidden
    text-overflow ellipsis
    background-color color-first
    color white
    font-family LatoLight, sans-serif
    font-size 2.5rem
    text-align center
    padding 2rem
    border-top-left-radius 0.3rem
    border-top-right-radius 0.3rem

  &__user-profile
    position relative
    background-color color-first-dark
    height 2.9rem

    & .user-profile
      position absolute
      bottom 0
      left 50%
      transform translate(-50%, 50%)

  &__body
    display flex
    flex-direction column
    align-items stretch
    padding 2rem
    background-color #f2f2f2
    font-family LatoBold, sans-serif
    font-weight bold
    min-height 33rem

    & > *:not(:last-child)
      margin-bottom 2rem

  &__links
    display flex
    justify-content space-between
    font-size 1.7rem
    padding 0 0.25rem

  &__link
    text-decoration none
    width 2rem

    & svg path
      fill #8e8d8d

  &__chat-wrapper
    flex 1 1 auto
    overflow hidden
    position relative

    &::after
    &::before
      content ''
      display block
      position absolute
      width 100%
      height 0.5rem
      z-index 1

    &::before
      top 0
      background-image linear-gradient(to top, transparent, #f2f2f2)

    &::after
      bottom 0
      background-image linear-gradient(to bottom, transparent, #f2f2f2)

  &__chat-scroller
    max-height 300px
    overflow-y scroll

    &::-webkit-scrollbar {
      width 0
    }

  &__chat > *:not(:last-child)
    margin-bottom 0.8rem

  &__message
    position relative
    display flex
    align-items center
    background-color white
    color #868686
    border-radius 0.5rem
    text-align left
    font-size 1.2rem
    line-height 1.3rem
    padding 1.5rem

  &__message_in
    margin-right 2rem
    margin-left 0.5rem

    &::after
      content ''
      display block
      position absolute
      background-color inherit
      transform rotate(45deg)
      width 0.5rem
      height 0.5rem
      left -0.25rem
      border-bottom-left-radius 1px

  &__message_out
    margin-left 2rem
    margin-right 0.5rem

    &::after
      content ''
      display block
      position absolute
      background-color inherit
      transform rotate(45deg)
      width 0.5rem
      height 0.5rem
      right -0.25rem
      border-top-right-radius 1px

  &__input
    background-color #e5e5e5
    color #777777
    border-radius 0.5rem
    border 0.3rem solid white
    text-align left
    font-size 1.2rem
    line-height 1.3rem
    padding 1.5rem
    height 6rem
    width 100%
    resize none
    font-family  inherit

    &:focus
      outline none

  &__btn-submit .button
    width 100%
