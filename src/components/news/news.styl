.news
  flex 1 1
  display flex
  flex-direction column
  align-items stretch
  justify-content space-around
  padding 1.5rem
  background-color color-second
  color white
  text-align left
  overflow hidden

  & > *:not(:first-child)
    margin-top 0.5rem

  &__title
    flex-shrink 0
    font-size 2.3rem
    line-height 2.3rem
    overflow hidden
    text-overflow ellipsis
    font-family LatoLight, sans-serif

  &__date
    flex-shrink 0
    font-family LatoBlack, sans-serif
    font-weight bold
    text-transform uppercase
    overflow hidden
    text-overflow ellipsis

  &__description
    flex 1 1
    font-family LatoRegular, sans-serif
    overflow hidden
    text-overflow ellipsis