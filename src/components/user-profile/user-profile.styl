user-profile_height = 7.8rem

.user-profile
  position relative

  display inline-flex
  align-items center

  width user-profile_height
  height user-profile_height

  &__frame
    display flex
    align-items stretch

    overflow hidden
    width 100%
    height 100%
    border 0.4rem solid #e5e5e5
    border-radius 50%
    background url(./img/default-avatar.png) no-repeat center center
    background-size 96%
    background-color white

  &__photo
    width 100%
    border-radius 50%

  &__tooltip-wrapper
    display none
    position absolute
    left 100%
    z-index 2
    padding-left 10%
    min-width 174%
    max-width 200%
    min-height 100%
    visibility hidden
    transition visibility 0s ease-in 0.1s

  &__tooltip
    position relative
    display flex
    flex 1 0 auto
    flex-direction column
    justify-content center
    padding 0.85rem
    border-radius 0.6rem
    background-color color-first
    color white

    &::before
      content ''
      display block
      position absolute
      background-color inherit
      transform rotate(45deg)
      width 0.7rem
      height 0.7rem
      left -0.3rem
      border-bottom-left-radius 0.25rem

    &_active
      background-color #e5e5e5
      color #4f4f4f

      & .user-profile__name
        color color-second

      & .user-profile__social
        background-color #4f4f4f

      & .user-profile__social_active
        background-color color-second

  &:hover &__tooltip-wrapper
    visibility visible
    display flex

  &__name
    overflow hidden
    text-overflow ellipsis
    text-align center
    font-family LatoRegular, sans-serif
    font-size 1.5rem

  &__profession
    overflow hidden
    text-overflow ellipsis
    text-align center
    font-family LatoBlack, sans-serif
    font-weight bold
    font-size 0.95rem
    text-transform uppercase

  &__social-container
    height 2.3rem
    display flex
    align-items stretch
    padding 0 10%
    margin-top auto
    padding-top 0.3rem

  &__social
    text-decoration none
    background-color white
    width 100%
    mask-size contain
    mask-repeat no-repeat
    mask-position center center

    &_active
      cursor pointer

    &_facebook
      mask-image url(./img/facebook-logo.svg)

    &_twitter
      mask-image url(./img/twitter-logo.svg)

    &_instagram
      mask-image url(./img/instagram-logo.svg)
