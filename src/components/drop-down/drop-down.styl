dropDownHeight = 2.3rem

.drop-down
  display: block;
  height: dropDownHeight;

  & .ui-button.ui-selectmenu-button
    display block
    overflow hidden
    width auto
    background-color: #e5e5e5;
    border-radius: 0.3rem;

    &-open
      border-bottom-left-radius 0
      border-bottom-right-radius 0

      & .ui-selectmenu-icon::after
        mask-image url(./img/up.svg)

  & .ui-selectmenu-icon
    display flex
    justify-content center
    height: dropDownHeight;
    width: 2.8rem;
    background-color: #4eb7a8;

    &::after
      content '1'
      display block
      color transparent
      flex-basis 50%
      background-color white
      mask-position center center
      mask-repeat no-repeat
      mask-size contain
      mask-image url(./img/down.svg)

  & .ui-selectmenu-text
    height: dropDownHeight;
    margin-right: 2.8rem;
    vertical-align: middle;
    line-height: dropDownHeight;
    padding-left: 1.1rem;
    color: #888;
    font-family: sans-serif;
    font-size: 1.1rem;

.ui-selectmenu-menu.ui-selectmenu-open
  padding-top: 0.2rem;

  & .ui-menu
    border: 2px solid #e5e5e5;
    border-bottom-left-radius: 0.3rem;
    border-bottom-right-radius: 0.3rem;

  & .ui-menu-item-wrapper
    padding: 0.3rem 1rem;
    font-family: sans-serif;
    font-size: 1.1rem;
    color #888

    &.ui-state-active
      border 1px solid #d0d0d0
      background-color #e5e5e5
      margin -1px