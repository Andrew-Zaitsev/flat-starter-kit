.slider

  & &__widget.ui-widget-content
    margin 0.6rem 0.8rem
    border none
    background-color #e5e5e5
    height 0.4rem

  & &__handle.ui-slider-handle
    width 1.5rem
    height 1.5rem
    border-radius 50%
    border none
    top -0.6rem
    margin-left -0.8rem
    cursor pointer

    &:focus
      outline none

    &.ui-state-active
      border none
      color inherit

  &__handle-tooltip
    background-color inherit
    border-radius 0.4rem
    padding 0.3rem 0.8rem
    color white
    font-size 1.1rem
    font-family LatoBlack, sans-serif
    font-weight bold
    position absolute
    bottom 140%
    display none
    transform: translateX(calc((-100% + 1.5rem) / 2));

    &_active
      display block

    &::before
      content ''
      display block
      background-color inherit
      transform rotate(45deg)
      width 0.5rem
      height 0.5rem
      position absolute
      bottom: -0.25rem
      left: calc(50% - 0.25rem)
      border-bottom-right-radius 1px

  &__scale
    display flex
    justify-content space-between
    margin-top 0.75rem
    padding 0 0.4rem

  &__scale-item
    font-family LatoBlack, sans-serif
    font-weight bold
    font-size 0.9rem
    color #d1d1d1