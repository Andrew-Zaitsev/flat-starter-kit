.textarea
  display block
  width 100%
  background-color #e5e5e5
  color #888888
  font-size 1.2rem
  font-family SourceSansProRegular, sans-serif
  padding 0.43rem 1rem
  min-height 7.3rem
  padding-top 0.8rem
  border none
  border-radius 4px
  resize none

  &:focus
    outline: 0.3rem auto #bbb