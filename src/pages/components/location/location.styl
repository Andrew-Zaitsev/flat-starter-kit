.location
  position relative
  overflow hidden
  border-radius 0.3rem
  z-index 3000

  &__widget
    height 22%

  &__info
    display flex
    align-items center
    font-family LatoLight, sans-serif
    font-size 2.5rem
    background-color color-second
    color white

    & > *:first-child
      flex-shrink  0
      padding-left 4.5%

    & > *
      padding 3% 2%

    & > *:last-child
      flex-basis 0
      padding-right 4.5%

  &__adress
    flex-grow 1
    font-family LatoBlack, sans-serif
    font-weight bold
    font-size 1.1rem
    text-transform uppercase
    text-align left

  &__icon

    &_crosshairs::before
    &_map-marker::before
      display block
      content '1'
      color transparent
      width 2rem
      mask-position center center
      mask-repeat no-repeat
      mask-size contain
      background-color white

    &_crosshairs::before
      mask-image url(./img/crosshair.svg)

    &_map-marker::before
      mask-image url(./img/map-marker.svg)