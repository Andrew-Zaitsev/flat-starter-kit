.search
  font-size 1.2rem
  font-family SourceSansProRegular, sans-serif

  &_error &__text
    background-color color-second

    &[placeholder]
      text-overflow ellipsis
    &::-webkit-input-placeholder
      color white
      text-overflow ellipsis
    &::-moz-placeholder
      color white
      text-overflow ellipsis
    &:-moz-placeholder
      color white
      text-overflow ellipsis
    &:-ms-input-placeholder
      color white
      text-overflow ellipsis

  &__form
    display flex
    align-items stretch

  &__text
    display block
    width 100%
    background-color #e5e5e5
    color #888888
    padding 0.55rem 1rem
    border none
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    resize none
    transition background-color 0.2s

    &:focus
      outline: 0.3rem auto #4d90fe

  &__submit
    display flex
    width 3.2rem
    background-color color-second
    border none
    border-top-right-radius 3px
    border-bottom-right-radius 3px

    &:focus
      outline: 0.3rem auto #4d90fe

    &::before
      display block
      content "1"
      color transparent
      flex-grow 1
      background-color white
      mask-position center center
      mask-repeat no-repeat
      mask-size contain
      mask-image url(./img/glass-finder.svg)
